@page
@using OnlineLearningPlatform.Areas.Identity.Pages.Account
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="text-center mb-4">
    <h2 class="fw-bold text-dark mb-2">Chào mừng trở lại!</h2>
    <p class="text-muted">Đăng nhập để tiếp tục hành trình học tập của bạn</p>
    
    <div class="alert alert-info mt-3">
        <h6 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Tài khoản demo:</h6>
        <hr>
        <p class="mb-2"><strong>Admin:</strong> admin@learnhub.com / Admin123!</p>
        <p class="mb-2"><strong>Giảng viên:</strong> instructor1@learnhub.com / Instructor123!</p>
        <p class="mb-0"><strong>Học viên:</strong> Đăng ký tài khoản mới</p>
    </div>
</div>

<form id="account" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    <div class="form-floating">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    
    <div class="form-floating">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.Password">Mật khẩu</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    
    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Input.RememberMe" />
        <label class="form-check-label" asp-for="Input.RememberMe">
            Ghi nhớ đăng nhập
        </label>
    </div>
    
    <div class="d-grid mb-3">
        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
        </button>
    </div>
    
    <div class="text-center">
        <a id="forgot-password" asp-page="./ForgotPassword" class="auth-link">Quên mật khẩu?</a>
    </div>
</form>

<div class="divider">
    <span>hoặc</span>
</div>

<div class="text-center">
    <a href="#" class="social-btn w-100">
        <i class="fab fa-google me-2"></i>
        Đăng nhập với Google
    </a>
    <a href="#" class="social-btn w-100">
        <i class="fab fa-facebook-f me-2"></i>
        Đăng nhập với Facebook
    </a>
</div>

<div class="text-center mt-4">
    <p class="mb-0">
        Chưa có tài khoản? 
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">Đăng ký ngay</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}