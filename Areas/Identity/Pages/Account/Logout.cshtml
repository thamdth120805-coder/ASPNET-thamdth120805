@page
@using OnlineLearningPlatform.Areas.Identity.Pages.Account
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="text-center">
    <div class="mb-4">
        <i class="fas fa-sign-out-alt fa-4x text-muted mb-3"></i>
        <h2 class="fw-bold text-dark mb-2">Đăng xuất thành công</h2>
        <p class="text-muted">Bạn đã đăng xuất khỏi tài khoản LearnHub</p>
    </div>
    
    <div class="d-grid gap-2">
        <a asp-page="./Login" class="btn btn-primary btn-lg">
            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập lại
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-home me-2"></i>Về trang chủ
        </a>
    </div>
</div>