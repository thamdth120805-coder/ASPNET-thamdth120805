@{
    ViewData["Title"] = "Trang chủ";
    var featuredCourses = ViewBag.FeaturedCourses as List<OnlineLearningPlatform.Models.Course>;
    var categories = ViewBag.Categories as List<OnlineLearningPlatform.Models.Category>;
}

<!-- Hero Section -->
<section class="bg-gradient-to-br from-blue-50 via-white to-purple-50 py-5" style="background: linear-gradient(135deg, #f8faff 0%, #ffffff 50%, #faf5ff 100%);">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="pe-lg-5">
                    <h1 class="display-4 fw-bold mb-4">
                        Học tập không giới hạn với
                        <span class="text-primary d-block">LearnHub</span>
                    </h1>
                    <p class="lead text-muted mb-4">
                        Khám phá hàng nghìn khóa học chất lượng cao từ các chuyên gia hàng đầu. 
                        Nâng cao kỹ năng và thay đổi sự nghiệp của bạn ngay hôm nay.
                    </p>
                    <div class="d-flex flex-column flex-sm-row gap-3 mb-5">
                        <a asp-controller="Courses" asp-action="Index" class="btn btn-primary btn-lg px-4">
                            <i class="fas fa-book-open me-2"></i>Khám phá khóa học
                        </a>
                        <button class="btn btn-outline-secondary btn-lg px-4">
                            <i class="fas fa-play me-2"></i>Xem video giới thiệu
                        </button>
                    </div>
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="h3 fw-bold text-primary mb-1">50K+</div>
                            <div class="text-muted small">Học viên</div>
                        </div>
                        <div class="col-4">
                            <div class="h3 fw-bold text-primary mb-1">1,200+</div>
                            <div class="text-muted small">Khóa học</div>
                        </div>
                        <div class="col-4">
                            <div class="h3 fw-bold text-primary mb-1">500+</div>
                            <div class="text-muted small">Giảng viên</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="position-relative">
                    <img src="https://images.pexels.com/photos/3184360/pexels-photo-3184360.jpeg?auto=compress&cs=tinysrgb&w=800" 
                         alt="Online Learning" class="img-fluid rounded-3 shadow-lg">
                    <div class="position-absolute top-0 start-0 translate-middle">
                        <div class="bg-primary text-white p-3 rounded-3 shadow">
                            <i class="fas fa-users fs-4 mb-2 d-block"></i>
                            <div class="small fw-semibold">Live Classes</div>
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 end-0 translate-middle">
                        <div class="bg-success text-white p-3 rounded-3 shadow">
                            <i class="fas fa-award fs-4 mb-2 d-block"></i>
                            <div class="small fw-semibold">Certificates</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Courses -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Khóa học nổi bật</h2>
            <p class="text-muted">Những khóa học được yêu thích nhất từ cộng đồng học viên</p>
        </div>
        
        @if (featuredCourses != null && featuredCourses.Any())
        {
            <div class="row g-4">
                @foreach (var course in featuredCourses)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm border-0 course-card">
                            <div class="position-relative">
                                <img src="@course.ThumbnailUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;">
                                <div class="position-absolute top-0 start-0 m-3">
                                    <span class="badge bg-primary">@course.Category?.Name</span>
                                </div>
                                @if (course.Price == 0)
                                {
                                    <div class="position-absolute top-0 end-0 m-3">
                                        <span class="badge bg-success">Miễn phí</span>
                                    </div>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-semibold mb-2">@course.Title</h5>
                                <p class="card-text text-muted small mb-3">@course.ShortDescription</p>
                                <p class="text-muted small mb-3">
                                    Giảng viên: @course.Instructor?.User?.FullName
                                </p>
                                <div class="d-flex justify-content-between align-items-center mb-3 small text-muted">
                                    <span><i class="fas fa-clock me-1"></i>@((course.DurationMinutes / 60)) giờ</span>
                                    <span><i class="fas fa-users me-1"></i>@course.TotalStudents.ToString("N0")</span>
                                    <span><i class="fas fa-star text-warning me-1"></i>@course.Rating</span>
                                </div>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            @if (course.Price == 0)
                                            {
                                                <span class="h5 text-success fw-bold mb-0">Miễn phí</span>
                                            }
                                            else
                                            {
                                                <span class="h5 text-primary fw-bold mb-0">@course.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                                @if (course.OriginalPrice.HasValue)
                                                {
                                                    <small class="text-muted text-decoration-line-through ms-2">@course.OriginalPrice.Value.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</small>
                                                }
                                            }
                                        </div>
                                        <a asp-controller="Courses" asp-action="Details" asp-route-slug="@course.Slug" class="btn btn-primary btn-sm">
                                            Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        
        <div class="text-center mt-5">
            <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary btn-lg">
                Xem tất cả khóa học <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Categories -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Danh mục khóa học</h2>
            <p class="text-muted">Khám phá các lĩnh vực học tập đa dạng</p>
        </div>
        
        @if (categories != null && categories.Any())
        {
            <div class="row g-4">
                @foreach (var category in categories)
                {
                    <div class="col-lg-4 col-md-6">
                        <a asp-controller="Courses" asp-action="Index" asp-route-category="@category.Slug" class="text-decoration-none">
                            <div class="card h-100 border-0 shadow-sm category-card" style="background: @category.Color; background: linear-gradient(135deg, @category.Color 0%, @category.Color 100%);">
                                <div class="card-body text-center text-white p-4">
                                    <div class="mb-3">
                                        <i class="fas fa-code fs-1 opacity-75"></i>
                                    </div>
                                    <h5 class="card-title fw-bold mb-2">@category.Name</h5>
                                    <p class="card-text opacity-90">@category.Description</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- Features -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Tại sao chọn LearnHub?</h2>
            <p class="text-muted">Những ưu điểm vượt trội của nền tảng học tập trực tuyến hàng đầu</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-graduation-cap fs-2 text-primary"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Chất lượng cao</h5>
                    <p class="text-muted">Khóa học được thiết kế bởi các chuyên gia hàng đầu trong ngành</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-clock fs-2 text-success"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Học mọi lúc</h5>
                    <p class="text-muted">Truy cập khóa học 24/7 trên mọi thiết bị, học theo tốc độ của bạn</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="text-center">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-certificate fs-2 text-warning"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Chứng chỉ</h5>
                    <p class="text-muted">Nhận chứng chỉ hoàn thành được công nhận trong ngành</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="text-center">
                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-headset fs-2 text-info"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Hỗ trợ 24/7</h5>
                    <p class="text-muted">Đội ngũ hỗ trợ chuyên nghiệp sẵn sàng giúp đỡ bạn mọi lúc</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <style>
        .course-card:hover {
            transform: translateY(-5px);
            transition: transform 0.3s ease;
        }
        
        .category-card:hover {
            transform: translateY(-3px);
            transition: transform 0.3s ease;
        }
    </style>
}